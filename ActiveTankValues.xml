<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">
	<Font name="HowMuchMitigation_Font" font="Fonts\FRIZQT__.TTF" outline="NORMAL" virtual="true">
        <FontHeight>
            <AbsValue val="24"/>
        </FontHeight>
		<Color r="1" g="1" b="1" a="1"/>
    </Font>
	<Script file="HowMuchMitigation.lua"/>
	<Frame name="HowMuchMitigation_Main" parent="UIParent" hidden="true" enableMouse="true" movable="true">
		<Size>
			<AbsDimension x="140" y="40"/>
		</Size>
		<Anchors>
			<Anchor point="CENTER"/>
		</Anchors>
		<Layers>
			<Layer level="BACKGROUND">
				<Texture name="$parent_Background" alphamode="BLEND">
					<Color r="0" g="0" b="0" a=".5"/>
				</Texture>
				<FontString name="$parentText" inherits="GameFontNormalLarge">
					<Size>
						<AbsDimension x="100" y="40"/>
					</Size>
					<Anchors>
						<Anchor point="LEFT"/>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<Button name="$parentButton1" hidden="false" enabled="false">
				<Size>
					<AbsDimension x="40" y="40"/>
				</Size>
				<Anchors>
					<Anchor point="RIGHT"/>
				</Anchors>
				<Attributes>
					<Attribute name="type" value="spell"/>
				</Attributes>
			</Button>
			<StatusBar name="$parentStatusBar" hidden="false" orientation="HORIZONTAL">
				<Size>
					<AbsDimension x="100" y="10"/>
				</Size>
				<Anchors>
					<Anchor point="LEFT"/>
				</Anchors>
			</StatusBar>
		</Frames>
		<Scripts>
			<OnLoad function="HowMuchMitigation_OnLoad"/>
			<OnDragStart>self:StartMoving()</OnDragStart>
			<OnDragStop>self:StopMovingOrSizing();</OnDragStop>
		</Scripts>
	</Frame>
</Ui>