<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">
	<Font name="HowMuchMitigation_Font" font="Fonts\FRIZQT__.TTF" outline="NORMAL" virtual="true">
        <FontHeight>
            <AbsValue val="24"/>
        </FontHeight>
		<Color r="1" g="1" b="1" a="1"/>
    </Font>
	<Script file="HowMuchMitigation.lua"/>
	<Frame name="HowMuchMitigation_Main" parent="UIParent" hidden="true" enableMouse="true" movable="true">
		<Size>
			<AbsDimension x="140" y="40"/>
		</Size>
		<Anchors>
			<Anchor point="CENTER"/>
		</Anchors>
		<Layers>
			<Layer level="BACKGROUND">
				<Texture name="$parent_Background" alphamode="BLEND" setAllPoints="true">
					<Color r="0" g="0" b="0" a="1"/>
				</Texture>
				<FontString name="$parentText" inherits="GameFontNormalLarge">
					<Size>
						<AbsDimension x="60" y="40"/>
					</Size>
					<Anchors>
						<Anchor point="RIGHT"/>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Scripts>
			<OnLoad function="HowMuchMitigation_OnLoad"/>
			<OnDragStart>self:StartMoving()</OnDragStart>
			<OnDragStop>self:StopMovingOrSizing();</OnDragStop>
		</Scripts>
	</Frame>
</Ui>